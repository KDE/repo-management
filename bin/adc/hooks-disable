#!/bin/sh

. $(dirname $0)/adc.common-functions

realrepo=$1
get_rights_and_owner "gitolite-admin.git"

if [ "$perm_write" != "yes" ]; then
    die "You have no permissions. Goodbye"
fi

cd $GL_REPO_BASE_ABS

if [ -f $realrepo.git/kde-hooks-off ]; then
    echo "Hooks are already disabled!"
else
    touch $realrepo.git/kde-hooks-off
    echo "Hooks are now disabled"
fi
